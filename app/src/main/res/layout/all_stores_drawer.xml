<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

  <ListView
      android:id="@+id/drawerListview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/store_list_background_color"
      android:choiceMode="singleChoice"
      android:listSelector="@android:color/transparent"
      android:divider="@android:color/white"
      android:dividerHeight="1dp"

      />

  <include
      layout="@layout/standard_fullscreen_progress_bar"
      android:id="@+id/loadingStoresProgressBar"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="@string/cant_load_stores"
      android:id="@+id/cantLoadStores"
      android:gravity="center"
      android:visibility="invisible"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      tools:visibility="visible"/>

</RelativeLayout>